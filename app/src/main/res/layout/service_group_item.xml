<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_dp_64"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/editGroupBtn"
        android:layout_width="@dimen/common_dp_16"
        android:layout_height="@dimen/common_dp_16"
        android:layout_marginLeft="@dimen/common_dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:background="@android:drawable/ic_menu_edit"/>
    <TextView
        android:id="@+id/groupTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        android:layout_marginLeft="@dimen/common_dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Test"
        app:layout_constraintLeft_toRightOf="@id/editGroupBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintRight_toLeftOf="@+id/addServiceTextView"/>

    <TextView
        android:id="@+id/deleteServiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bordered_default_color"
        android:paddingBottom="@dimen/common_dp_4"
        android:paddingLeft="@dimen/common_dp_8"
        android:paddingRight="@dimen/common_dp_8"
        android:paddingTop="@dimen/common_dp_4"
        android:layout_marginRight="@dimen/common_dp_4"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/addServiceTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_delete_service_group"
        tools:text="Delete Service Group" />

    <TextView
        android:id="@+id/addServiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bordered_default_color"
        android:paddingBottom="@dimen/common_dp_4"
        android:paddingLeft="@dimen/common_dp_8"
        android:paddingRight="@dimen/common_dp_8"
        android:paddingTop="@dimen/common_dp_4"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/groupTitleTextView"
        app:layout_constraintRight_toLeftOf="@+id/chevron"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_add_new_service"
        tools:text="Add New Service" />
    <ImageView
        android:id="@+id/chevron"
        android:layout_width="@dimen/common_dp_16"
        android:layout_height="@dimen/common_dp_16"
        app:layout_constraintLeft_toRightOf="@id/addServiceTextView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/common_dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:drawable/arrow_down_float"
        android:layout_marginRight="@dimen/common_dp_8"/>
</android.support.constraint.ConstraintLayout>